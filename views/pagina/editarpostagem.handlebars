{{#each erros}}
<div class="alert alert-danger">{{text}}</div>
{{/each}}

<div class="card">
    <div class="card-body">
        <h4>Editar Postagem</h4>
        <form action= "/admin/postagem/edit" method="POST">
                <input type="hidden", name="id", value="{{postagem._id}}">
                <label for="titulo">Titulo: </label>
                <input type="text" name="titulo" class="form-control" value="{{postagem.titulo}}">
                <label for="slug">desciplina: </label>
                <input type="text" name="slug" class="form-control" value="{{postagem.slug}}">
                <label for="descricao">Descrição: </label>
                <input type="text" name="descricao" class="form-control" value="{{postagem.descricao}}">
                <label for="conteudo">Conteudo: </label>
                <textarea name="conteudo" class="form-control" ></textarea>
                <button type="submit" class="btn btn-success">Editar Postagem</button>
                <label for="categoria" >Categorias</label>
                <select name="categoria">
                    {{#each categorias}}
                    <option value="{{_id}}">{{nome}}</option>
                    {{else}}
                    <option value="0">nenhuma desciplina registada</option>
                    {{/each}}
                </select>
        </form>
    </div>

</div>